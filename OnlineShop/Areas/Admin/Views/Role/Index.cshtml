
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Role</a>
    </div>
</div>
<br />

<div>
    <table class="table table-stripped border">
        <tr class="table-info">
            <th>
                Name
            </th>
            <th>
                UserName
            </th>


            <th></th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td style="width:150px">
                    <partial name="_PartialView" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

