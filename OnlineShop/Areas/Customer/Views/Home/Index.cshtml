@using OnlineShop.Models

@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Product>

@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px;color:steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
                <div class="card-header">
                    <div class="d-flex justify-context-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313"><b>Price: @product.Price.ToString("C")</b></label>
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-info pull-right">Details</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="d-flex w-100 justify-content-center btn-lg">
      @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c), X.PagedList.Web.Common.PagedListRenderOptions.PageNumbersOnly)      
